<header>
  <%= render 'shared/nav'%>
</header>

<main role="main" class="home-page">
  <section class="jumbotron text-center">
    <!-- <div class="overlay">
    </div> -->
    <div class="container">
      <h1 class="app-intro-text app-intro-text-lg">Core.io</h1>
      <p class="app-intro-text">A tool for the collection, management, and analysis of cellar data</p>
    </div>
  </section>

  <section class="app-features">
    <div class="container">
      <h1 class="text-center">Explore Core.io</h1>
      <div class="row">
        <div class="col-xs-12 col-md-4 mt-2">
          <div class="app-feature d-flex flex-column align-tems-center justify-content-center">
            <%= fa_icon "edit 2x", class: "app-options-icon text-center" %>
            <h2 class="app-options-header text-center">Record Data</h2>
            <p class="app-options-desc text-center">Record keeping made simple with Core. Manage samples, add experiemental results, and track chemical additions. </p>
            <div class="mx-auto">
              <button class="btn btn-primary btn-sm action-button ">Learn More</button>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4 mt-2">
          <div class="app-feature d-flex flex-column align-tems-center justify-content-center">
            <%= fa_icon "database 2x", class: "app-options-icon text-center"%>
            <h2 class="app-options-header text-center">Perform Analysis</h2>
            <p class="app-options-desc text-center">Quick visualization of fermentation data and chemical efficacy with live updated charts and diagrams.</p>
            <div class="mx-auto">
              <button class="btn btn-primary btn-sm action-button ">Learn More</button>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4 mt-2">
          <div class="app-feature d-flex flex-column align-tems-center justify-content-center">
            <%= fa_icon "flask 2x", class: "app-options-icon text-center"%>
            <h2 class="app-options-header text-center">Schedule Experiments</h2>
            <p class="app-options-desc text-center">Use the calendar feature to schedule tasks and experiements so you never miss out on valuable data.</p>
            <div class="mx-auto">
              <button class="btn btn-primary btn-sm action-button ">Learn More</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
